@model Football.PL.Models.TeamViewModel
@{
    ViewBag.Title = "Show";
}

<h2>Команда @Html.DisplayFor(model => model.Name)</h2>

<h3>Игроков: @ViewBag.Players.Count</h3>

<table class="table">

    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.Players)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Больше", "Show", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

