@model IEnumerable<Football.PL.Models.StadiumViewModel>
@{
    ViewBag.Title = "Стадионы";
}

<h2>Список стадионов</h2>

@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
<br />
<br />
<table class="table">

    <tr>
        <th>
            @Html.ActionLink("Название", "Index", new { sortBy = ViewBag.NameSort })
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>